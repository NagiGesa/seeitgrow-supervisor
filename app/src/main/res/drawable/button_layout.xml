<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="false">
                <shape android:shape="rectangle">
                        <corners android:radius="0dp" />
                        <solid android:color="#0B6623" />
                        <stroke
                            android:width="2dip"
                            android:color="#0B6623" />
                        <padding
                            android:bottom="4dp"
                            android:left="4dp"
                            android:right="4dp"
                            android:top="4dp" />
                        <corners android:radius="15dp" />
                </shape>
        </item>
        <item android:state_pressed="true">
                <shape android:shape="rectangle">
                        <corners android:radius="0dp" />
                        <solid android:color="#388004" />
                        <stroke
                            android:width="2dip"
                            android:color="#388004" />
                        <padding
                            android:bottom="4dp"
                            android:left="4dp"
                            android:right="4dp"
                            android:top="4dp" />
                        <corners android:radius="15dp" />
                </shape>
        </item>
</selector>